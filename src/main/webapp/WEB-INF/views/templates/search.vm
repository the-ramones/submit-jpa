        var onlyRecent = document.getElementById("only-recent-checkbox").checked;        
        var query = 'query=' + encodeURI($("input[name='search']").val().trim()
            + '&limit=' + limit + '&useIndex=' + useIndex + '&recent' + onlyRecent);
        //TODO: timings
