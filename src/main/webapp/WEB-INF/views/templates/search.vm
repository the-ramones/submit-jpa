## Real-time search template
<div class="form-container">
    <h2>#springMessage('content.search.title')</h2>
    <form name="search-form" method="POST" action="#springUrl('/report/ajax')" autocomplete="off">
        <input type="button" name="search-button" id="search_button" />
        <input type="text" name="search" value="" placeholder="#springMessage('content.search.placeholder')" />
        <ul class="subnav">
            <li><a href="#">#springMessage('content.search.nothing')</a></li>
        </ul>
    </form>
    <p class="stats"><span>#springMessage('content.search.result'): 419 (0,10 #springMessage('content.search.second').) </span></p>    
</div>

#hint()

<div class="results-wrap">
    <h2>#springMessage('content.search.list.title')</h2>
    <table tabindex="1" class="table">
        <caption>#springMessage('content.search.list.subtitle')</caption>
        <thead>
            <tr>
                <th>id</th>
                <th>#springMessage('content.detail.start')</th>
                <th>#springMessage('content.detail.end')</th>
                <th>#springMessage('content.detail.performer')</th>
                <th>#springMessage('content.detail.activity')</th>
            </tr>
        <tbody>
            #foreach($report in $reports)

            <tr>
                <td>${report.id}</td>
                <td>${report.startDate}</td>
                <td>${report.endDate}</td>
                <td>${report.performer}</td>
                <td>${report.activity}</td>
            </tr>
            <tr>
                <td>${report.id}</td>
                <td>${report.startDate}</td>
                <td>${report.endDate}</td>
                <td>${report.performer}</td>
                <td>${report.activity}</td>
                <!--button group-->
        <div class="button-block clearfix hidden">
            <button class="action">#springMessage('button.action.get')</button>
            <button class="action update">#springMessage('button.action.update')</button>          
            <button class="action delete">#springMessage('button.action.delete')</button>
        </div>
        </tr>
        #end
        </tbody>
        </thead>
    </table>
</div>