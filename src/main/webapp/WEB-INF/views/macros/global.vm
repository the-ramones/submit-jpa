                #set($ru_url = $url + '?lang=ru')
                <li><a href="?lang=en">#springMessage('sticker.left.language.english')</a></li>
                <li><a href="?lang=ru">#springMessage('sticker.left.language.russian')</a></li>
            </ul>
        </div>
    </div>  
#end