<?xml version="1.0" encoding="UTF-8"?>

<!-- Sortable -->
<tools>
    <data type="number">
        <key>app_version</key>
        <value>0.1</value>
    </data>
    <data type="string">
        <key>app_name</key>
        <value>Reports!</value>
    </data>
    <data type="boolean">
        <key>debug</key>
        <value>true</value>
    </data>
    
    <toolbox scope="application">
        <tool class="org.apache.velocity.tools.generic.SortTool"/>
    </toolbox>
    <!-- Escape sequenses -->
    <tool>
        <key>esc</key>
        <scope>application</scope>
        <class>org.apache.velocity.tools.generic.EscapeTool</class>
    </tool>
    <!-- errors -->
    <tool>
        <key>errors</key>
        <scope>request</scope>
        <class>org.apache.velocity.tools.struts.ErrorsTool</class>
    </tool>  
    
    <tool>
        <key>datetool</key>
        <scope>request</scope>
        <class>org.apache.velocity.tools.generic.DateTool</class>
    </tool>
    <!--format="dd M yy"-->
    
</tools>