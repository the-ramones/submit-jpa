<?xml version="1.0" encoding="UTF-8"?>

<toolbox>
    <!-- Properties -->
    <data type="number">
        <key>app_version</key>
        <value>0.1</value>
    </data>
    <data type="string">
        <key>app_name</key>
        <value>Reports!</value>
    </data>
    <data type="boolean">
        <key>debug</key>
        <value>true</value>
    </data>
    
    <!-- Date Tool -->
    <tool>
        <key>datetool</key>
        <scope>request</scope>
        <!--<class>org.apache.velocity.tools.generic.DateTool</class>-->
        <class>sp.util.SpDateTool</class>
    </tool>
    
    <!-- Math Tool -->
    <tool>
        <key>math</key>
        <scope>application</scope>
        <!--restrict tool appliance-->
        <!--<request-path>/catalog/*</request-path>-->
        <!--<parameter name="my.parameter.name" value="my.parameter.value"/>-->
        <class>org.apache.velocity.tools.generic.MathTool</class>
    </tool>
    
    <!-- Escape Tool -->
    <tool>
        <key>esc</key>
        <scope>application</scope>
        <class>org.apache.velocity.tools.generic.EscapeTool</class>
    </tool>    
   
    <!-- Sort Tool -->
    <tool>
        <key>sort</key>
        <scope>application</scope>
        <class>org.apache.velocity.tools.generic.SortTool</class>
    </tool>
   
</toolbox>

